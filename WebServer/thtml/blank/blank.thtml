    var blobToText = function( blob ){
        return new Promise((resolve,reject) => {
            var reader = new FileReader();
		    reader.onload = function() {

			try
			{
                resolve(reader.result);
			}
			catch( er )
			{
                debugger;
                reject(er);
			}
			reader.onerror = reject;
		}
		reader.readAsText(blob);
        }) 
    }

